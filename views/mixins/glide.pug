mixin glide(id, css='', slide)
  .glide(id= id)
    .glide__track(data-glide-el='track')
      ul.glide__slides
        li(class='glide__slide ' + css)
          img.lazy(
            src="data:image/gif;base64,R0lGODlhAgABAIAAAP///wAAACH5BAEAAAEALAAAAAACAAEAAAICTAoAOw==",
            data-src= slide.cover,
            data-srcset= slide.cover + " 1x",
            alt= slide.heading
          )
          span.posts__item-category= slide.cat
          h3.posts__item-title= slide.heading
          .posts__item-footer
            .post__author-avatar
              img.lazy(
                src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAEALAAAAAABAAEAAAICTAEAOw==",
                data-src= slide.authorAvatar,
                data-srcset= slide.authorAvatar + ' 1x',
                alt= slide.authorName
              )
            .posts__item-info
              .post__author-name= slide.authorName
              .posts__item-stats
                span.badge.badge--views
                  +svg('eye', 'icon--xs')
                  != slide.views
                span.badge.badge--likes
                  +svg('favorite', 'icon--xs')
                  != slide.favorites.length

    .glide__arrows(data-glide-el='controls')
      button.button.button--icon--only.button--white.glide__arrow.glide__arrow--left(data-glide-dir='<')
        i.icon.material-icons navigate_before
      button.button.button--icon--only.button--white.glide__arrow.glide__arrow--right(data-glide-dir='>')
        i.icon.material-icons navigate_next